<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      navigatedTo="pageNavigatedTo"
      actionBarHidden="true">

    <GridLayout rows="3*, 3*, 5*, *">

        <Image row="0" cssClass="logo" src="res://logo" stretch="aspectFit" horizontalAlign="center"/>

        <StackLayout cssClass="form" row="1" orientation="vertical">
            <Button text="{{ LOGIN }}" tap="{{ tapSignIn }}" cssClass="button big"/>
            <Button text="{{ REGISTER }}" tap="{{ tapRegister }}" cssClass="button small"/>
        </StackLayout>

        <Image cssClass="extra" row="2" src="res://extra" stretch="aspectFit" horizontalAlign="center"/>

        <label row="3" class="all-rights" textWrap="true" text="All rights reserved by Soap Studio Company Limited."/>

    </GridLayout>

</Page>