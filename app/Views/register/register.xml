<Page loaded="pageLoaded" actionBarHidden="true" xmlns:dd="nativescript-drop-down">

    <ScrollView>

        <GridLayout columns="*" rows="*" width="*" height="*">

            <Image src="res://background" stretch="aspectFill"/>
            <Image src="res://top_fader" stretch="aspectFill"/>
            <Image src="res://fader" stretch="aspectFill"/>

            <GridLayout cssClass="container" row="1" rows="100,*,*,*,*,*,*,*,*" width="*" height="*">

                <TextField text="{{ username }}" hint="User Name" row="1"/>

                <GridLayout row="2" columns="*,*" width="*" height="*">
                    <TextField text="{{ password }}" hint="Password" col="0"/>
                    <TextField text="{{ password }}" hint="Confirmation" col="1"/>
                </GridLayout>

                <GridLayout row="3" columns="3*, 2*, 2*">
                    <Label text="Gender" col="0"/>
                    <Label id="male" text="M" col="1" horizontalAlignment="center" tap="{{ setGender }}"
                           cssClass="{{ gender === 'male' ? 'selectedLabel' : '' }}"/>
                    <Label id="female" text="F" col="2" horizontalAlignment="center" tap="{{ setGender }}"
                           cssClass="{{ gender === 'female' ? 'selectedLabel' : '' }}"/>
                </GridLayout>

                <GridLayout row="4" columns="*,*">
                    <Label cssClass="label" text="Age Group:" col="0"/>
                    <dd:DropDown cssClass="drop-down" col="1" items="{{ ages }}"
                                 selectedIndex="{{ selectedAge }}"></dd:DropDown>
                </GridLayout>

                <GridLayout row="5" columns="auto,*">
                    <Label cssClass="label" text="Country:" col="0"/>
                    <dd:DropDown items="{{ countries }}" col="1" selectedIndex="{{ selectedCountry }}"/>
                </GridLayout>

                <!--<GridLayout row="6" columns="*, 8*">-->
