<Page loaded="pageLoaded"
      xmlns:dd="nativescript-drop-down"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      android:actionBarHidden="true">

    <GridLayout rows="100,*">

        <Image row="0" cssClass="logo" src="res://logo_white" stretch="aspectFit" horizontalAlign="center"/>

        <ScrollView row="1">
            <StackLayout cssClass="form" orientation="vertical">

                <TextField text="{{ username }}" hint="USERNAME"/>
                <TextField text="{{ password }}" hint="PASSWORD" secure="true"/>
                <TextField text="{{ password_confirmation }}" hint="PASSWORD CONFIRMATION" secure="true"/>
                <TextField text="{{ email }}" hint="E-MAIL"/>

                <Label text="Gender"/>
                <GridLayout orientation="horizontal" columns="*,*">
                    <Label id="male"
                           cssClass="{{ gender === 'male' ? 'gender-container--selected' : 'gender-container' }}"
                           text="Male" col="0" tap="{{ setGender }}"/>
                    <Label id="female"
                           cssClass="{{ gender === 'female' ? 'gender-container--selected' : 'gender-container' }}"
                           text="Female" col="1" tap="{{ setGender }}"/>
                </GridLayout>

                <Label text="Country"/>
                <dd:DropDown cssClass="drop-down" items="{{ countries }}" selectedIndex="{{ selectedCountry }}"/>

                <Label text="Age Group"/>
                <dd:DropDown cssClass="drop-down" items="{{ ages }}" selectedIndex="{{ selectedAge }}"/>

                <StackLayout cssClass="{{ agreement ?  'terms-container--accepted' : 'terms-container' }}"
                             tap="{{ toggleAgreement }}">
                    <Label cssClass="terms-label-note" text="TAP TO SELECT"/>
                    <Label text="I Agree with Terms and Condition."/>
                </StackLayout>

                <StackLayout cssClass="{{ newsletter ?  'terms-container--accepted' : 'terms-container' }}"
                             tap="{{ toggleNewsletter }}">
                    <Label cssClass="terms-label-note" text="TAP TO SELECT"/>
                    <Label text="I Prefer not to Receive any Promotion Information."/>
                </StackLayout>

                <Button text="Register" tap="{{ tapRegister }}"/>

                <ActivityIndicator busy="{{ isLoading }}" rowSpan="2"/>

            </StackLayout>

        </ScrollView>
    </GridLayout>

</Page>