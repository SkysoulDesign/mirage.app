                <!--<Label text="Terms and condition." col="1" cssClass="termlabel"/>-->
                <!--</GridLayout>-->
                <!--</GridLayout>-->

                <Button row="6" text="Create your account" tap="{{ tapOK }}" width="100%"/>

            </GridLayout>

            <AbsoluteLayout cssClass="avatar-container" horizontalAlignment="center" col="0" width="*" height="*">
                <Image cssClass="avatar" row="0" width="150" src="res://avatar_placeholder"/>
            </AbsoluteLayout>

            <!--<DockLayout width="*" height="120" verticalAlignment="bottom">-->
