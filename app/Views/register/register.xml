<Page loaded="pageLoaded" android:actionBarHidden="true" xmlns:dd="nativescript-drop-down">
    <ScrollView>
        <GridLayout rows="auto,auto">
            <StackLayout orientation="vertical">
                <GridLayout height="75" cssClass="headerlayout">
                </GridLayout>

                <GridLayout columns="3*, 4*" height="50">
                    <Label text="User name" col="0"/>
                    <TextField text="{{ username }}" hint="User Name" col="1"/>
                </GridLayout>

                <GridLayout columns="3*, 4*" height="50">
                    <Label text="Password" col="0"/>
                    <TextField text="{{ password }}" hint="Password" col="1"/>
                </GridLayout>

                <GridLayout columns="3*, 4*" height="50">
                    <Label text="Confirm Password" col="0"/>
                    <TextField text="{{ password_confirmation }}" hint="Confirm Password" col="1"/>
                </GridLayout>

                <GridLayout columns="3*, 4*" height="50">
                    <Label text="E-mail address" col="0"/>
                    <TextField text="{{ email }}" hint="E-mail address" col="1"/>
                </GridLayout>

                <GridLayout columns="3*, 2*, 2*" height="50">
                    <Label text="Gender" col="0"/>
                    <Label id="male" text="M" col="1" horizontalAlignment="center" tap="{{ setGender }}"
                           cssClass="{{ gender === 'male' ? 'selectedLabel' : '' }}"/>
                    <Label id="female" text="F" col="2" horizontalAlignment="center" tap="{{ setGender }}"
                           cssClass="{{ gender === 'female' ? 'selectedLabel' : '' }}"/>
                </GridLayout>

                <GridLayout columns="3*, 4*" height="50">
                    <dd:DropDown items="{{ countries }}" selectedIndex="{{ selectedCountry }}" row="0" colSpan="2" />
                </GridLayout>

                <GridLayout columns="3*, 4*" height="50">
                    <dd:DropDown items="{{ ages }}" selectedIndex="{{ selectedAge }}" row="0" colSpan="2" />
                </GridLayout>

                <GridLayout columns="*, 8*" height="30">
                    <Label text="口" col="0" tap="{{ toggleAgreement }}"
                           cssClass="{{ agreement ? 'selectedLabel' : '' }}"/>
                    <GridLayout columns="auto, auto" col="1">
                        <Label text="I agree with the agreement." col="0" cssClass="agreelabel"/>
                        <Label text="Terms and condition." col="1" cssClass="termlabel"/>
                    </GridLayout>
                </GridLayout>

                <GridLayout columns="*, 8*" height="30">
                    <Label text="口" col="0" tap="{{ toggleNewsletter }}"
                           cssClass="{{ newsletter ? 'selectedLabel' : '' }}"/>
                    <Label text="I Prefer not to receive any promotion information." col="1" cssClass="agreelabel"/>
                </GridLayout>

                <GridLayout height="80">
                    <Button text="OK" tap="{{ tapOK }}" cssClass="okbutton" orientation="horizontal"/>
                </GridLayout>

            </StackLayout>
            <ActivityIndicator busy="{{ isLoading }}" rowSpan="2"/>
        </GridLayout>
    </ScrollView>
</Page>