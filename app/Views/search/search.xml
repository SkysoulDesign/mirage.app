<Page navigatedTo="pageNavigatedTo"
      loaded="pageLoaded"
      android:actionBarHidden="true"
      xmlns:dd="nativescript-drop-down">

    <GridLayout rows="80,*5,*2">

        <GridLayout cssClass="action-bar-container" row="0" columns="1*,5*,1*">

            <Image cssClass="menu-icon" col="0" src="res://back_icon"
                   horizontalAlignment="center" verticalAlignment="center"
                   stretch="aspectFit" tap="{{ tapBack }}"/>

            <Label text="{{ SEARCH }}" cssClass="action-bar-label" col="1" horizontalAlignment="left"
                   verticalAlignment="center"/>

        </GridLayout>

        <StackLayout id="container" cssClass="search-container" row="1">

            <GridLayout cssClass="item" columns="*,*">
                <Label cssClass="item-content" text="{{ SEARCH_BY }}" tap="tapSearchBy" col="0"/>
                <dd:DropDown id="dropdown" cssClass="item-content right"
                             col="1" items="{{ types }}"
                             selectedIndex="{{ selectedType }}"/>
            </GridLayout>

            <SearchBar class="search-bar" id="searchBar"/>

            <Label class="search-result-label" text="{{ RESULTS }}"/>

        </StackLayout>

    </GridLayout>

</Page>