<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" loaded="pageLoaded">

    <GridLayout columns="*" rows="100,60,350,*" width="*" height="*">

        <Image src="res://logo" cssClass="logo" horizontalAlignment="center" verticalAlignment="center"
               stretch="aspectFit"/>

        <GridLayout class="container" width="*" row="1" columns="*, 100">
            <TextField col="0" hint="Insert code"/>
            <Image cssClass="qr-code-icon" col="1" tap="{{ tapScanQRCode }}" src="res://qr_code" stretch="aspectFit"/>
        </GridLayout>

        <ScrollView orientation="horizontal" row="2">
            <GridLayout cssClass="stage" width="*" columns="*,*,*,*,*,*,*,*,*,*">
                <Image cssClass="foreground-statue" col="0" src="res://statue_batman" stretch="aspectFit"/>
                <Image cssClass="background-statue" col="1" src="res://statue_superman" stretch="aspectFit"/>
                <Image cssClass="foreground-statue" col="2" src="res://statue_batman" stretch="aspectFit"/>
                <Image cssClass="background-statue" col="3" src="res://statue_superman" stretch="aspectFit"/>
                <Image cssClass="foreground-statue" col="4" src="res://statue_batman" stretch="aspectFit"/>
                <Image cssClass="background-statue" col="5" src="res://statue_superman" stretch="aspectFit"/>
                <Image cssClass="foreground-statue" col="6" src="res://statue_batman" stretch="aspectFit"/>
                <Image cssClass="background-statue" col="7" src="res://statue_batman" stretch="aspectFit"/>
            </GridLayout>
        </ScrollView>

        <GridLayout row="3" columns="*,*,*,*">
            <Button col="0" tap="{{ tapRegister }}" cssClass="menu-button hologram"/>
            <Button col="1" tap="{{ tapSignIn }}" cssClass="menu-button news"/>
            <Button col="2" tap="{{ tapSignIn }}" cssClass="menu-button soap"/>
            <Button col="3" tap="{{ tapSignIn }}" cssClass="menu-button settings"/>
        </GridLayout>

    </GridLayout>

</Page>