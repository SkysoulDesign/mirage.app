<Page loaded="pageLoaded" android:actionBarHidden="true">

    <GridLayout rows="*, *">

        <Image row="0" cssClass="logo" src="res://logo_white" stretch="aspectFit"/>

        <StackLayout cssClass="form" row="1">
            <TextField class="field" text="{{ username }}" hint="USERNAME"/>
            <TextField class="field" text="{{ password }}" hint="PASSWORD" secure="true"/>
            <Button text="LOGIN" row="2" tap="{{ tapSignIn }}"/>
            <ActivityIndicator busy="{{ isLoading }}"/>
        </StackLayout>

    </GridLayout>

</Page>