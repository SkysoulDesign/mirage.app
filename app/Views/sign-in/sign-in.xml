<Page loaded="pageLoaded" actionBarHidden="true">

    <GridLayout rows="3*, 2*">

        <Image row="0" cssClass="logo" src="res://logo_white" stretch="aspectFit"/>

        <StackLayout cssClass="form" row="1">
            <TextField text="{{ username }}" hint="USERNAME"/>
            <TextField text="{{ password }}" hint="PASSWORD" secure="true"/>
            <Button text="LOGIN" row="2" tap="{{ tapSignIn }}"/>
            <ActivityIndicator busy="{{ isLoading }}"/>
        </StackLayout>

    </GridLayout>

</Page>