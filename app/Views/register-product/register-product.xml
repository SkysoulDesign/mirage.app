<Page loaded="pageLoaded" android:actionBarHidden="true">

    <GridLayout rows="3*,4*">

        <GridLayout row="0" class="stage">
            <Image row="0" src="{{ product_image }}"/>
            <ActivityIndicator busy="{{ isLoading }}"/>
        </GridLayout>

        <GridLayout class="container" row="1" rows="*,2*,*,*">

            <StackLayout row="0">
                <Label class="label top" row="1" text="PLEASE INPUT THE"/>
                <Label class="label bottom" row="2" text="PRODUCT CODE"/>
            </StackLayout>

            <!--<GridLayout orientation="horizontal" row="1" columns="*,*,*,*">-->
            <TextField row="1" text="{{ code }}" id="code_input"/>
            <!--</GridLayout>-->

            <Button row="2" text="REGISTER" tap="{{tapRegister}}"/>

        </GridLayout>

    </GridLayout>
</Page>