<Page loaded="pageLoaded" android:actionBarHidden="true">

    <GridLayout rows="3*,4*">

        <GridLayout row="0" class="stage">
            <Image id="figure" row="0" src="{{ product_image }}"/>
            <ActivityIndicator busy="{{ isLoading }}"/>
        </GridLayout>

        <GridLayout class="container" row="1" rows="*,2*,*,*">

            <StackLayout row="0">
                <Label class="label top" row="1" text="PLEASE INPUT THE"/>
                <Label class="label bottom" row="2" text="PRODUCT CODE"/>
            </StackLayout>

            <Label class="label center" row="1" text="{{ code_text }}"/>
            <TextField row="1" text="{{ code }}" id="code_input" hint="EX: MF001-9YHD-FFF4-XC85"/>

            <Button row="2" text="REGISTER" tap="{{tapRegister}}" id="register_button"/>

        </GridLayout>

    </GridLayout>
</Page>