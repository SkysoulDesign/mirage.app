<Page loaded="pageLoaded" android:actionBarHidden="true" > 
	<!-- //actionBarHidden="true" -->
<!-- 	<StackLayout orientation="vertical">
		<Image src="res://icon" stretch="fill" horizontalAlignment="center" />
