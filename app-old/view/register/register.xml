<Page loaded="pageLoaded" android:actionBarHidden="true">
	<ScrollView>
		<GridLayout rows="auto,auto">
		<StackLayout orientation="vertical">
			<GridLayout height="75" cssClass="headerlayout" >
			</GridLayout>
			
			<GridLayout columns="3*, 2*, 2*" height="50" >
				<Label text="Always Auto Login" col="0" />
				<Label text="Yes" col="1" horizontalAlignment="center" tap="autoLogin" cssClass="{{ autoLogin===0 ? 'selectedlabel' : '' }}" />
				<Label text="No"  col="2" horizontalAlignment="center" tap="autoLoginNo" cssClass="{{ autoLogin===1 ? 'selectedlabel' : '' }}" />
			</GridLayout>
			<GridLayout columns="3*, 4*" height="50" >
				<!-- <Label text="User name" col="0" /> -->
				<TextField text="{{username}}" hint="User Name" col="1" />
			</GridLayout>
			<GridLayout columns="3*, 4*" height="50" >
				<Label text="Password" col="0" />
				<TextField text="{{password}}" hint="Password" col="1" />
			</GridLayout>
			<GridLayout columns="3*, 4*" height="50" >
				<Label text="Confirm Password" col="0" />
				<TextField text="{{confirmpassword}}" hint="Confirm Password" col="1" />
			</GridLayout>
			<GridLayout columns="3*, 4*" height="50" >
				<Label text="E-mail address" col="0" />
				<TextField text="{{email}}" hint="E-mail address" col="1" />
			</GridLayout>
			<GridLayout columns="3*, 2*, 2*" height="50" >
				<Label text="Gender" col="0" />
				<Label text="M" col="1" horizontalAlignment="center" tap="tapGenderMale" cssClass="{{ gender===0 ? 'selectedlabel' : '' }}" />
				<Label text="F" col="2" horizontalAlignment="center" tap="tapGenderFeMale" cssClass="{{ gender===1 ? 'selectedlabel' : '' }}" />
			</GridLayout>
			<GridLayout columns="3*, 4*" height="50" >
				<Label text="Country" col="0" />
				<TextField text="{{country}}" hint="Contry" col="1" />
			</GridLayout>
			<GridLayout columns="3*, 2*, 2*" rows="*, *, *, *" height="150" >
				<Label text="Age group" col="0" />
				<Button text="01 - 10" row="0" col="1" tap="tapAge1" cssClass="{{ agegroup===1 ? 'selectedbutton' : '' }}" />
				<Button text="11 - 20" row="0" col="2" tap="tapAge2" cssClass="{{ agegroup===2 ? 'selectedbutton' : '' }}" />
				<Button text="21 - 30" row="1" col="1" tap="tapAge3" cssClass="{{ agegroup===3 ? 'selectedbutton' : '' }}" />
				<Button text="31 - 40" row="1" col="2" tap="tapAge4" cssClass="{{ agegroup===4 ? 'selectedbutton' : '' }}" />
				<Button text="41 - 50" row="2" col="1" tap="tapAge5" cssClass="{{ agegroup===5 ? 'selectedbutton' : '' }}" />
				<Button text="51 - 60" row="2" col="2" tap="tapAge6" cssClass="{{ agegroup===6 ? 'selectedbutton' : '' }}" />
				<Button text="Above 60" row="3" col="1" tap="tapAge7" colSpan="2" cssClass="{{ agegroup===7 ? 'selectedbutton' : '' }}"  />
			</GridLayout>
			<GridLayout columns="*, 9*" height="30" >
				<Label text="口" col="0" tap="{{ toggleAgreement }}" cssClass="{{ agreement ? 'selectedlabel' : '' }}"  />
				<GridLayout columns="auto, auto" col="1" >
					<Label text="I agree with the agreement." col="0" cssClass="agreelabel" />
					<Label text="Terms and condition." col="1" cssClass="termlabel" />
				</GridLayout>
			</GridLayout>
			<GridLayout columns="*, 9*" height="30" >
				<Label text="口" col="0" tap="{{ toggleInformation }}" cssClass="{{ information ? 'selectedlabel' : '' }}" />
				<Label text="I Prefer not to receive any promotion information." col="1" cssClass="agreelabel" />
			</GridLayout>
			<GridLayout  height="80" >
				<Button text="OK" tap="{{ tapOK }}" cssClass="okbutton" orientation="horizontal" />
			</GridLayout>
		</StackLayout>
		<ActivityIndicator busy="{{ isLoading }}" rowSpan="2"/>
		</GridLayout>
	</ScrollView>
</Page>