<Page android:actionBarHidden="true" loaded="pageLoaded" >
	<GridLayout rows="*, *" >
		<Image src="~/image/soap.png" stretch="fill" />
		<GridLayout  row="1" rows="*" >
			<ios>
			<GridLayout row="0" rows="2*, *">
				<Label row="0" text="Iphone SmartPhone" />
				<GridLayout row="1" rows="auto" columns="*, *, *">
					<Button id="screen4.0" text="Iphone 5/5c/5s" row="0" col="0" tap="choosescreensize"/>
					<Button id="screen4.7" text="Iphone 6/6s" row="0" col="1" tap="choosescreensize"/>
					<Button id="screen5.5" text="Iphone 6/6s Plus" row="0" col="2" tap="choosescreensize"/>
				</GridLayout>
			</GridLayout>
			</ios>

			<android>
			<GridLayout row="0" rows="2*, *">
				<Label text="Android SmartPhone" />
				<GridLayout row="1" rows="auto" columns="*, *, *">
					<Button id="screen4.0" text="Screen 4" row="0" col="0" tap="choosescreensize"/>
					<Button id="screen4.5" text="Screen 4.5-5" row="0" col="1" tap="choosescreensize"/>
					<Button id="screen5.5" text="Screen 5-5.5" row="0" col="2" tap="choosescreensize"/>
				</GridLayout>
			</GridLayout>
			</android>
		</GridLayout>
	</GridLayout>
</Page>